<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.gvp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:typeface">serif</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="ToolbarThemeLight" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="ToolbarThemeDark" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:typeface">serif</item>
        <item name="android:textSize">@dimen/text_size_h3</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DarkStatusBar" parent="Theme.gvp">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="LightStatusBar" parent="Theme.gvp">
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>